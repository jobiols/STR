<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
	<data>
		<template id="nixel_report">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<div class="page">

						<h1>Reporte financiero</h1>

							<div class="row">
								<div class="col-xs-3">
									<strong>Generado</strong>:
									<br/>
									<span t-esc="time.strftime('%d/%m/%Y')"/>
								</div>
								<div class="col-xs-3">
									<strong>Desde</strong>:
									<br/>
									<span t-field="o.desde_date"/>
								</div>
								<div class="col-xs-3">
									<strong>Hasta</strong>:
									<br/>
									<span t-field="o.hasta_date"/>
								</div>
								<div class="col-xs-3">
									<strong></strong>:
									<br/>
								</div>
							</div>

						<h3>Ventas del período (iva incluido)</h3>

							<table class="table table-condensed">
							<tbody>
								<tr>
									<td>
										<p>Facturado
											<span t-esc="get_venta()['fac']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</p>
									</td>
									<td>
										<p>Cobrado
											<span t-esc="get_venta()['cob']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</p>
									</td>
									<td>
										<p>Pendiente
											<span t-esc="get_venta()['pen']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>

						<h3>Compras del período (iva incluido)</h3>

							<table class="table table-condensed">
							<tbody>
								<tr>
									<td>
										<p>Facturado
											<span t-esc="get_compra()['fac']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</p>
									</td>
									<td>
										<p>Cobrado
											<span t-esc="get_compra()['cob']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</p>
									</td>
									<td>
										<p>Pendiente
											<span t-esc="get_compra()['pen']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>

						<h3>Gastos del período</h3>

							<table class="table table-condensed">
							<tbody>
								<tr>
									<td>
										<p>Gastos
											<span t-esc="get_gastos()['gas']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>

						<h3>Mis cobros pendientes</h3>

							<table class="table table-condensed">
								<thead>
								<tr>
									<th>Nombre del cliente</th>
									<th class="text-right">Monto</th>
								</tr>
								</thead>

								<tbody>
								<t t-foreach="get_debtors()['debtors']" t-as="debtor">
									<tr>
										<td>
											<span t-esc="debtor['name']"/>
										</td>
										<td class="text-right">
											<span t-esc="debtor['amount']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</td>
									</tr>
								</t>
							</tbody>

						</table>

							<div class="row">
								<div class="col-xs-4 pull-right">
									<table class="table table-condensed">
										<tr class="border-black">
											<td>
												<strong>Total</strong>
											</td>
											<td class="text-right">
												<span t-esc="get_debtors()['total']"
													  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
											</td>
										</tr>
									</table>
								</div>
							</div>

							<h3>Mis pagos pendientes</h3>

							<table class="table table-condensed">
								<thead>
								<tr>
									<th>Nombre del proveedor</th>
									<th class="text-right">Monto</th>
								</tr>
								</thead>
								<tbody>
									<t t-foreach="get_creditors()['creditors']"
									   t-as="creditor">
									<tr>
										<td>
											<span t-esc="creditor['name']"/>
										</td>
										<td class="text-right">
											<span t-esc="creditor['amount']"
												  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
										</td>
									</tr>
								</t>
							</tbody>
						</table>
							<div class="row">
								<div class="col-xs-4 pull-right">
									<table class="table table-condensed">
										<tr class="border-black">
											<td>
												<strong>Total</strong>
											</td>
											<td class="text-right">
												<span t-esc="get_creditors()['total']"
													  t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
											</td>
										</tr>
									</table>
								</div>
							</div>
					</div>
					</t>
				</t>
			</t>
		</template>
	</data>
</openerp>