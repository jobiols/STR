<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>

        <template id="nixel_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
                    <div class="page">
						<!-- comienzo reporte -->

						<h1>Reporte financiero</h1>

						<p style="text-align: right;">Desde
							<span t-field="o.desde_date"/>
							Hasta
							<span t-field="o.hasta_date"/>
						</p>
						<hr/>
						<h3>Ventas del período (iva incluido)</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Facturado $
											<span t-field="o.venta_fac"/>
										</p>
									</td>
									<td>
										<p>Cobrado $
											<span t-field="o.venta_cob"/>
										</p>
									</td>
									<td>
										<p>Pendiente $
											<span t-field="o.venta_pen"/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>
						<hr/>
						<h3>Compras del período (iva incluido)</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Facturado $
											<span t-field="o.compra_fac"/>
										</p>
									</td>
									<td>
										<p>Cobrado $
											<span t-field="o.compra_cob"/>
										</p>
									</td>
									<td>
										<p>Pendiente $
											<span t-field="o.compra_pen"/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>
						<hr/>
						<h3>Gastos del período</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Gastos $
											<span t-field="o.gastos"/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>
						<hr/>
						<h3>Mis cobros pendientes</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Cliente</p>
									</td>
									<td>
										<p>Monto</p>
									</td>
								</tr>
								<tr>
									<td>
										<p>Juan perez</p>
									</td>
									<td>
										<p>$500</p>
									</td>
								</tr>
								<tr>
									<td></td>
									<td></td>
								</tr>
							</tbody>
						</table>
						<hr/>
						<h3>Mis pagos pendientes</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Cliente</p>
									</td>
									<td>
										<p>Monto</p>
									</td>
								</tr>
								<tr>
									<td>
										<p>Juan perez</p>
									</td>
									<td>
										<p>$500</p>
									</td>
								</tr>
								<tr>
									<td></td>
									<td></td>
								</tr>
							</tbody>
						</table>


						<!-- termino reporte -->


					</div>
					</t>
                </t>
            </t>
        </template>

    </data>
</openerp>