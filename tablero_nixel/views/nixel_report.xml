<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>

        <template id="nixel_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
                    <div class="page">
						<!-- comienzo reporte -->

						<h1>Reporte financiero</h1>

						<p style="text-align: right;">Desde
							<span t-field="o.desde_date"/>
							Hasta
							<span t-field="o.hasta_date"/>
						</p>
						<hr/>
						<h3>Ventas del período (iva incluido)</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Facturado $
											(<span t-field="o.venta_fac"/>)
											<span t-esc="get_venta()['fac']"/>
										</p>
									</td>
									<td>
										<p>Cobrado $
											(<span t-field="o.venta_cob"/>)
											<span t-esc="get_venta()['cob']"/>
										</p>
									</td>
									<td>
										<p>Pendiente $
											(<span t-field="o.venta_pen"/>)
											<span t-esc="get_venta()['pen']"/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>
						<hr/>
						<h3>Compras del período (iva incluido)</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Facturado $
											(<span t-field="o.compra_fac"/>)
											<span t-esc="get_compra()['fac']"/>
										</p>
									</td>
									<td>
										<p>Cobrado $
											(<span t-field="o.compra_cob"/>)
											<span t-esc="get_compra()['cob']"/>
										</p>
									</td>
									<td>
										<p>Pendiente $
											(<span t-field="o.compra_pen"/>)
											<span t-esc="get_compra()['pen']"/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>
						<hr/>
						<h3>Gastos del período</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Gastos $
											(<span t-field="o.gastos"/>)
											<span t-esc="get_gastos()['gas']"/>
										</p>
									</td>
								</tr>
							</tbody>
						</table>
						<hr/>
						<h3>Mis cobros pendientes</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Cliente</p>
									</td>
									<td>
										<p>Monto</p>
									</td>
								</tr>
								<t t-foreach="get_debtors()" t-as="debtor">
									<tr>
										<td>
											<span t-esc="debtor['name']"/>
										</td>
										<td>
											<span t-esc="debtor['amount']"/>
										</td>
									</tr>
								</t>
							</tbody>
						</table>
						<hr/>
						<h3>Mis pagos pendientes</h3>

						<table style="width:100%;">
							<tbody>
								<tr>
									<td>
										<p>Cliente</p>
									</td>
									<td>
										<p>Monto</p>
									</td>
								</tr>
								<t t-foreach="get_creditors()" t-as="creditor">
									<tr>
										<td>
											<span t-esc="creditor['name']"/>
										</td>
										<td>
											<span t-esc="creditor['amount']"/>
										</td>
									</tr>
								</t>
							</tbody>
						</table>

						<!-- termino reporte -->

					</div>
					</t>
                </t>
            </t>
        </template>

    </data>
</openerp>