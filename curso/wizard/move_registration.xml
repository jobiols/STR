<?xml version="1.0"?>
<openerp>
    <data>
        <!--  Mover inscripciones a otro curso -->

        <!--
                res_model= modelo a abrir
                src_model= modelo donde aparece el menuw
        -->
        <!-- con esto aparece en el boton MAS -->

        <act_window name="Mover inscripciones a otro curso"
                    res_model="curso.move.registration"
                    src_model="curso.registration"
                    key2="client_action_multi"
                    view_mode="form" target="new"
                    view_type="form"
                    id="act_new_sub_menu"/>


        <record model="ir.ui.view" id="view_curso_move_registration_wizard_form">
            <field name="name">Mover inscripciones a otro curso</field>
            <field name="model">curso.move.registration</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Facturacion de cursos" version="7.0">
                    <group>
                        <label string="Seleccioná el curso al que querés mover
                        el conjunto de alumnas inscriptas que marcaste previamente."/>
                    </group>
                    <group>
                        <field name="curso_id"/>
                    </group>

                    <footer>
                        <button string="Mover alumnas inscriptas" name="button_move_registration"
                                type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--
                <record id="wizard_curso_invoice" model="ir.actions.act_window">
                    <field name="name">Facturacion de cursos</field>
                    <field name="res_model">curso.invoice</field>
                    <field name="view_type">form</field>
                    <field name="view_mode">form</field>
                    <field name="target">new</field>
                </record>

                <menuitem name="Facturacion"
                          id="menu_action_curso_invoice" parent="base.menu_curso_main"
                          action="wizard_curso_invoice"
                          groups="curso.group_curso_manager,curso.group_curso_user"/>
        -->
    </data>
</openerp>
